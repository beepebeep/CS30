package university;

import java.util.Scanner;

public class University {

	static String eName, dName, jTitle;
	static double sal;
	static int choice;
	static Scanner i = new Scanner(System.in);		//open a new scanner
	
	
	public static void getInfo()
	{
		System.out.print("Enter the Employee Name: ");
		eName = i.nextLine();
		
		System.out.print("\nEnter the Salary: ");
		sal = i.nextDouble();
		
		System.out.print("\nEnter '1' for faculty or '2' for staff: ");
		choice = i.nextInt();
		
		switch (choice)
		{
			case 1:
			{
				System.out.print("Enter the department name: ");
				dName = i.next();
				facultyChoice();
				break;
			}
			case 2:
			{
				System.out.print("Enter the job title: ");
				jTitle = i.nextLine();
				staffChoice();
				break;
			}
		}
	}
	
	public static void facultyChoice()
	{
		Faculty f = new Faculty(dName, eName, sal);
		System.out.println(f.toString());
	}
	
	public static void staffChoice()
	{
		Staff s = new Staff(jTitle, eName, sal);
		System.out.println(s.toString());
	}
	
	public static void main(String[] args) 
	{
		getInfo();
		i.close();

	}

}
