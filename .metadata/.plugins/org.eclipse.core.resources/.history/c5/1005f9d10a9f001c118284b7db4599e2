package vehicle;

public class Minivan extends Vehicle{
	
	private double carg;
		
	public Minivan(int fECity, int fEHwy, int seating, double cargo) 
	{
		super(fECity, fEHwy, seating, cargo);
		carg = cargo;
	}
		
	@Override
	String cargoContainer() 
	{
		String cargoString = ("Cargo container type: Bed, with a capacity of: " + carg + "L.");
		return (cargoString);
	}
	
	@Override
	String description() 
	{
		String carDesc = ("Vans are typically used for hauling around people and their stuff. With up to 8 seats, and a roomy interior, they're great for families with many or even few children.");
		return carDesc;
	}

}
